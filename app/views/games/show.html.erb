<%= render template: "component/_header"%>

<div class='col-md-8 col-lg-8 col-sm-8 col-md-offset-2 col-sm-offset-2 col-lg-offset-2'>
    <div class='row'>
        <div class='col-md-8 col-sm-8 col-lg-8 col-xs-10'>
            <h2> GAME <small> Full Details </small> </h2>
        <!-- div .col-md-8 col-sm-8 col-lg-8 col-xs-10 -->
        </div>
        <div class='btn-admin col-md-4 col-sm-4 col-lg-4 col-xs-2'>
            <button type="button" class="btn btn-success btn-md pull-right" align='center' data-toggle="modal" data-target="#myModal">Update Game</button>

            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <%= form_for @game do |f| %>
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Modal Header</h4>
                            </div>

                            <div class="modal-body">
                                <div class='form-group'>
                                    <%= f.label :home_score %><br/>
                                    <%= f.select :home_score, (0..10), class: 'form-control' %>
                                </div>

                                <div class='form-group'>
                                    <%= f.label :away_score %><br/>
                                    <%= f.select :away_score, (0..10), class: 'form-control' %>
                                </div>

                                <div class='form-group'>
                                    <%= f.label :game_status %><br/>
                                    <%= f.select :status, [["Not Finished", false], ["Finished", true]] %>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button class="btn btn-lg btn-success btn-block" type="submit">Save</button>
                            </div>
                        <% end %>
                    <!-- div .modal-content -->
                    </div>
                <!-- div .modal-dialog -->
                </div>
            <!-- div .modal-fade -->
            </div>
        <!-- div .col-md-4 col-sm-4 col-lg-4 col-xs-2-->
        </div>
    </div>





    <div class='jumbotron'>
        <div class='row'>
            <div class='col-md-5'>
                <h3> <%= @game.game_home.team.name %> </h3>
            </div>

            <div class='col-md-2'>
                <h4> VS </h4>
            </div>

            <div class='col-md-5'>
              <h3> <%= @game.game_away.team.name %> </h3>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-6'>
                <h3> <%= @game.home_score %> </h3>
            </div>

            <div class='col-md-6'>
              <h3> <%= @game.away_score %> </h3>
            </div>
        </div>

        <div align='center'>
            <% if @game.status %>
                <% if @game.home_winner %>
                    <h2> Winner: <%= @game.game_home.team.name %> </h2>
                <% else %>
                    <h2> Winner: <%= @game.game_away.team.name %> </h2>
                <% end %>
            <% else %>
                <p> UPCOMING MATCH </p>
            <% end %>
        </div>
    <!-- div .jumbotron -->
    </div>
<!-- div .col-md-8 col-lg-8 col-sm-8 col-md-offset-2 col-sm-offset-2 col-lg-offset-2 -->
</div>
